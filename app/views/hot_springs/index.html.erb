<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      TOTONOU
    </h2>
    <p class='service-explain'>
      全国のサウナの情報を共有できる
    </p>
    <p class='service-explain'>
      サウナ好きのためのサイトです
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>
  

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>温泉施設一覧</h2>
    
    <ul class='item-lists'>
 <% if @hot_springs.present? %>
      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <% @hot_springs.each do |hot_spring|%>
      <li class='list'>
        <%= link_to hot_spring_path(hot_spring.id) do %>
        <div class='item-img-content'>
          <% if hot_spring.image.present?%>
            <%= image_tag hot_spring.image, class: "item-img" %>
          <% else %>
             <%= image_tag "item-sample.png", class: "item-img" %>
          <% end %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= hot_spring.name %>
          </h3>
          <div class='item-price'>
          
            <span>男湯<%= @saunas.hot_temperture %><br><%= @saunas.cold_temperture %></span>
            <span>女湯<%= @saunas.w_hot_temperture %><br><%= @saunas.w_cold_temperture %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>

<% else%>
     
      
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            温泉施設を登録してね
          </h3>
          <div class='item-price'>
           
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
<% end %>
      
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to new_hot_spring_path, class: 'purchase-btn' do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>