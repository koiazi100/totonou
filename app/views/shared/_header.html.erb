<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
<div class='top-contents'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("sauna-logo.png", class:"sauna-icon"), "/" %>

        <%= search_form_for @q, url: search_hot_springs_path, class: "search-form" do |f| %>
          <%= f.search_field :name_or_city_or_block_or_building_cont , placeholder: "キーワードから探す", class: "input-box"%>
          <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name,include_blank: '都道府県から探す' ,class:"prefecture-box" %>

         <div class="search-button">
           <%= image_submit_tag("search.png", class: 'search-icon') %>
         </div>
        <% end %>
   
  </div>
  <div class='nav'>
    <ul class='lists-right'>
     <% if user_signed_in? %>
     <%#<li><%= link_to 'カテゴリー', "#", class: "category-list" </li>%>
      <li> <%= link_to '投稿する',new_hot_spring_path, class: "post" %></li>
     <%#li><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %></li> 
      <li><%= link_to 'マイページ', user_path(current_user.id), class: "user-nickname" %></li> 
     <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
     <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
     <% end %>
    </ul>
  </div>
  <div class='title-contents'>
    <h2 class='service-title'>
      TOTONOU
    </h2>
    <p class='service-explain'>
      全国のサウナの情報を共有できる
    </p>
    <p class='service-explain'>
      サウナ好きのためのサイトです
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  
</header>